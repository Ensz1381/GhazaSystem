@using GhazaSystem.UI.Services
@using Microsoft.AspNetCore.Components.Forms
@inject ISnackbar Snackbar
@inject CompanyServices companyServices


<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudTextField @bind-Value="companyDTOs.Name"
                         Placeholder="انتخاب کنید"
                         Label="نام شرکت " 
                         Variant="Variant.Outlined"
                         Required="true"
                         Adornment="Adornment.Start"
                         AdornmentIcon="@Icons.Material.Filled.CompareArrows" />

            <MudTextField @bind-Value="companyDTOs.C_Code" 
                         Label="کد شرکت" 
                         Variant="Variant.Outlined"
                         Lines="3" />

        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Default">انصراف</MudButton>
        <MudButton OnClick="Submit" Color="Color.Success" Variant="Variant.Filled">افزودن</MudButton>
    </DialogActions>
</MudDialog>

